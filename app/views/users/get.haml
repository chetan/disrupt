%div.friend
  %img{ :src => @user.facebook_photo, :width => 20, :height => 20 }
  %h2
    = "#{@user.name}'s Rankings"

%ul.dish
  - @dishes.each do |dish|
    %li.dish
      %h3
        = dish
      %ol
        - @rankings.find_all{ |r| r.dish.name == dish }.each do |rank|
          %li
            = rank.venue.name
            / = "##{rank.position}"
